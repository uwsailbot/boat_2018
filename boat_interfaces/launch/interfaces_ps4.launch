<!-- PS4 Controller Boat Interfaces launch file -->
<launch>
  <arg name="controller" default="/dev/ttyUSB0" />
  <arg name="arduino" default="/dev/ttyACM0" />
  <rosparam file ="$(find boat_interfaces)/config/parameters.yaml" command="load" />

  <!-- rosserial_python allows topics to be published and subscribed to across the serial link to the arduino -->
  <node pkg="rosserial_python" type="serial_node.py"
    args="_port:=$(arg arduino) _baud:=57600" name="rosserial_arduino" output="screen">
  </node>
  
  <!-- receiver_reader.py interfaces with the RC controller's receiver over serial -->
  <!-- Not that this will be replaced with futaba_reader.py soon -->
  <node pkg="boat_interfaces" type="receiver_reader.py" 
    args="$(arg controller)" name="receiver" output="screen">
  </node>
  
  <!-- Main nodes for this package -->
  <include file="$(find boat_interfaces)/launch/interfaces_base.launch" />
</launch>
